        api.pageParam.id = '38fee560-cd78-11ea-be50-d959bf2e4116';
      }

      GET('i_alls/getCourseDetail?courseId=' + api.pageParam.id).then(data => {
        this.data.courseData = data;
      })
    },
    playVideo() {
      api.openWin({
        name: 'play-video',
        url: '../play-video/play-video.stml',
